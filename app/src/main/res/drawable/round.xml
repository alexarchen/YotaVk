<?xml version="1.0" encoding="utf-8"?>
<shape
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="oval">
    <!-- view background color -->
    <solid
        android:color="#555" >
    </solid>

    <!-- view border color and width -->
    <stroke
        android:width="0px"
        android:color="#000000" >
    </stroke>

    <!-- If you want to add some padding -->
    <padding
        android:left="4dp"
        android:top="1dp"
        android:right="4dp">
    </padding>

</shape>